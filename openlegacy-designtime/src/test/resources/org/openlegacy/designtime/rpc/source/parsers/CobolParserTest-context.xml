<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

		
	<bean id="OpenlegacyCobolParser"
		class="org.openlegacy.designtime.rpc.source.parsers.OpenlegacyCobolParser" scope="prototype">
		<property name="mainProcedureName" value="BEGIN"/>
		<property name="cobolParser">
			<bean class="koopa.parsers.cobol.CobolParser">
				<property name="buildTrees"   value="true"/>
				<property name="preprocessing"   value="false"/>
				<property name="format" value="FREE"/>
			</bean>
		</property>
		<property name="rpcEntityDefinitionBuilder">
			<bean class="org.openlegacy.designtime.rpc.source.parsers.RpcEntityDefinitionBuilderImp" >
				<property name="fieldInformationFactory" >
					<bean class="org.openlegacy.designtime.rpc.source.parsers.CobolFieldInformationFactory"/>
				</property>
				<property name="entityDefinition" >
					<bean class="org.openlegacy.rpc.definitions.SimpleRpcEntityDefinition">
					</bean>
				</property>
			</bean>
		</property>
		
	</bean>
	<bean id ="CobolParserUtils" class="org.openlegacy.designtime.rpc.source.parsers.CobolParserUtils">

	</bean>
	
	
</beans>
